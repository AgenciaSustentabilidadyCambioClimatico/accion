    -if puede_editar
      = link_to '#', {class: 'remove-auditoria-nivel', onclick: "remover_auditoria_nivel('#{aud_id}','#{nivel_id}', event);", style: "width: 10%;"} do
        %i.fa.fa-times-circle.link-to-remove-row