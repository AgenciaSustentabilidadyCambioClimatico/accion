.modal.fade{id: :"terminar-diagnostico-pasar-acuerdo", tabindex: "-1", role: :dialog, "aria-labelledby": :terminarDiagnosticoModalLabel, "aria-hidden": true}
	.modal-dialog.modal-dialog-centered.modal-lg.animated{role: :document}
		.modal-content
			.modal-header
				%h5.no-margin
					= t(:terminar_diagnostico)
			.modal-body
				.row
					.col-12
						= f.input :observaciones_documentos_diagnostico, label: t(:observaciones_comentarios_siguiente_etapa), input_html: { class: '', value: ''}, placeholder: "Ingrese comentario u observación para la siguiente etapa", as: :text, required: false
			.modal-footer
				%div.m-auto
					%button.btn.btn-secondary{type: :button, "data-dismiss"=>:modal}
						Cerrar
					= f.submit "Terminar etapa de diagnóstico y pasar a negociación de acuerdo", class: 'btn btn-sm btn-primary btn-sm', data: { confirm: t(:confirma_poner_termino_diagnostico), remote: false }

