- data_table = data_table.nil? ? true : data_table
- resultado_mostrados = resultado_mostrados.nil? ? 30 : resultado_mostrados
- @usuarios = @usuarios.nil? ? [] : @usuarios
- @flujo_id = @flujo.present? ? @flujo.id : nil

.modal.fade{id: :"buscar-usuario", tabindex: "-1", role: :dialog, "aria-labelledby": :buscarContribuyenteLabel, "aria-hidden": true}
  .modal-dialog.modal-dialog-centered.modal-lg.animated{role: :document}
    .modal-content.p-3
      .modal-body.no-padding
        #usuarios-form-buscar
          = render "admin/users/form_buscar"
        #usuarios-remote-table
          = render "admin/users/tabla"
      .modal-footer.pr-0
        %button.btn.btn-secondary{type: :button, "data-dismiss"=>:modal}
          Cerrar
        %button.btn.btn-primary.seleccionar-usuario-button{type: :button, "data-dismiss"=>:modal, disabled: :disabled}
          Seleccionar
