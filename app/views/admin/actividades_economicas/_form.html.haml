= simple_form_for @actividad_economica, url: @url, remote: true do |f|
	.row
		.col-lg-12.column
			.card
				.card-header
					%h5.no-margin
						= action_label_of_(@actividad_economica)
				.card-body
					.row
						.col-lg-4
							.row
								.col-12
									= f.input :codigo_ciiuv2, label: t(:código_ciiu_v2), require: true, input_html: { class: 'required-field' }
								.col-12
									= f.input :codigo_ciiuv4, label: t(:código_ciiu_v4)
						.col-lg-8
							.row
								.col-12
									= f.input :descripcion, as: :text, label: t(:descripción), require: true, input_html: { class: 'required-field' }
								.col-12
									= f.input :descripcion_ciiuv2, as: :text, label: t(:descripción_ciiu_v2), require: true, input_html: { class: 'required-field' }
								.col-12
									= f.input :descripcion_ciiuv4, as: :text, label: t(:descripción_ciiu_v4), require: true
	.float-right
		= link_to t(:back), admin_actividades_economicas_path, class: 'btn btn-sm btn-warning'
		= button_tag t(:save), 'data-disable-with' => "<i class='fa fa-spinner fa-spin'></i> Guardando...".html_safe, id: 'consultar-button', class: "btn btn-sm btn-primary btn-disabled", disabled: :disabled