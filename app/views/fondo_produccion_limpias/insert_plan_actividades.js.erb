<% @duracion.each do |d| %>
  //console.log("Valor en Ã­ndice #mes_<%= @plan_actividades.actividad_id %>_<%= d %>");
  <% if @duracion_x.split(',').include?(d.to_s) %>
    $('#mes_<%= @plan_actividades.actividad_id %>_<%= d %>').text('X');
  <% else %>
    $('#mes_<%= @plan_actividades.actividad_id %>_<%= d %>').text('');
  <% end %>
<% end %>

$("#id_correlativo_plan_actividad_<%= @plan_actividades.actividad_id %>").text("<%= @correlativo_final %>");

var tipoPermiso = <%= @tipo_perm %>;
if (tipoPermiso === 1) {
  $("#nombre_actividad_<%= @plan_actividades.actividad_id %>").text("<%= @nombre_actividad %>");
}

//llena los cmapos de cero al momento de crear el plan de actividad
<% if @valida_ceros %>
  $("#valor_hh_tipo_3_<%= @plan_actividades.actividad_id %>").text('$0');
  $('#valor_hh_tipos_1_2_<%= @plan_actividades.actividad_id %>').text('$0');
  $('#total_gastos_tipo_1_<%= @plan_actividades.actividad_id %>').text('$0');
  $('#total_gastos_tipo_2_<%= @plan_actividades.actividad_id %>').text('$0');
  $('#total_suma_<%= @plan_actividades.actividad_id %>').text('$0');
<% end %>

$('#modal_create_plan_actividades-form').modal("hide");