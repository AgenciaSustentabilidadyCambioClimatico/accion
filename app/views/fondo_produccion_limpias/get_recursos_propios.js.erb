$('#div_postulantes_faltantes table tbody').empty();
<% postulantes_faltantes.each do |postulantes_faltante| %>
  var propio_id = '<%= postulantes_faltante.id %>';
  var nombre_usuario = '<%= postulantes_faltante.nombre_usuario %>';
  var newRow = "<tr>" +
    "<td class='contenido-form'>" + nombre_usuario + "</td>" +
    "<td class='contenido-form'>" +
    "<input type='text' name='descripcion' id='descripcion' class='required-field' style='border: 1px solid #ced4da; border-radius: 0.25rem;'>" +
    "</td>" +
    "</tr>";
  $('#div_postulantes_faltantes table tbody').append(newRow);
<% end %>


