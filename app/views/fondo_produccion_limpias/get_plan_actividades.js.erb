document.getElementById('plan_id').value = <%= plan_id %>;

<% if @nombre_actividad.present? %>
  $('#nombre_actividad').val('<%= @nombre_actividad %>');
<% end %>
$('#objetivos_especifico_id').val('<%= @objetivos_especifico_id %>');

