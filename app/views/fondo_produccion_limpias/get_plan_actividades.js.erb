$('#div_plan_gastos_operacion table tbody').empty();
<% if @gastos_operaciones.present? %>
  <% gastos_operaciones.each do |gastos_operacion| %>
    var gastos_id = '<%= gastos_operacion.id %>';
    var nombre = '<%= gastos_operacion.nombre %>';
