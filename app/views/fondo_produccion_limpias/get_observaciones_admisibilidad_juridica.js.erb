<% cuestionario_fpl.each_with_index do |cuestionario, index| %>
    //console.log("Valor en nota #nota_input_juridica_obs_id_<%= cuestionario.criterio_id %>, <%= cuestionario.nota %>");
    var nota = document.getElementById('nota_input_juridica_obs_id_<%= cuestionario.criterio_id %>');
    var justificacion = document.getElementById('obs_input_juridica_obs_id_<%= cuestionario.criterio_id %>');

    if (<%= cuestionario.nota %> == 1) {
        nota.textContent = 'Cumple';
        justificacion.textContent = ' -- ';
    }else{
        nota.textContent = 'No Cumple';
        justificacion.textContent = '<%= cuestionario.justificacion %>';

        nota.classList.add('texto-rojo'); // Agregar la clase si no cumple
    }
<% end %>


