= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-devise' } ) do |f|
	%h2.form-devise-heading
		= "Registro"
	= f.input :email, required: true, autofocus: true, placeholder: 'Correo', label: false, autocomplete: :off
	= f.input :password, required: true, placeholder: 'Contaseña', label: false
	= f.input :password_confirmation, required: true, placeholder: 'Confirmar contaseña', label: false
	= f.button :submit, "Registrarse", class: 'btn btn-sm btn-primary btn-block'
	= render "devise/shared/links"