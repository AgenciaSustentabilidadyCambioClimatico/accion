= titulo t(:cargar_datos_productivos_asociados_elementos_certificar)
-if @datos_productivos.present?
  = form_tag dato_productivo_elemento_adherido_formato_path, method: "patch" , multipart: true, remote: true  do
    .row
      .col-12.col-md-4
        .card
          .card-header
            %h5.no-margin=t(:descargar_formato)
          .card-body
            .row
              .col
                = link_to dato_productivo_elemento_adheridos_formato_path, class: 'btn btn-sm btn-outline-secondary btn-block' do
                  %i.fa.fa-download
                  = t(:descargar)
      .col-12.col-md-8
        .card
          .card-header
            %h5.no-margin=t(:subir_datos)
          .card-body        
            .row
              .col-6
                = label_tag 'archivos[]', 'Archivos de evidencia', class: "string"
                = file_field_tag 'archivos[]', :multiple => true
              .col-5
                = label_tag 'excell', 'Subir archivo con datos productivos', class: "string"
                = file_field_tag 'excell', :multiple => true

    %br

    .float-right
      = button_tag t(:save), 'data-disable-with' => "<i class='fa fa-spinner fa-spin'></i> Guardando...".html_safe, id: 'consultar-button', class: "btn btn-sm btn-primary btn-disabled"
      = link_to t(:volver), root_path, class: 'btn btn-sm btn-warning'
-else
  = t(:no_posee_datos_productivos)
