<div class="nested-fields">
  <div class="row">
    <div class="col-12 col-lg-4">
      <% if local_assigns[:cv] %>
        <%= f.input :description, label: 'Subir Curriculum Vitae aquí', input_html: { value: 'Curriculum Vitae', readonly: true } %>
      <% elsif local_assigns[:ci] %>
        <%= f.input :description, label: 'Subir Copia CI aquí', input_html: { value: 'Copia CI', readonly: true } %>
      <% else %>
        <%= f.input :description, label: 'Descripción documento' %>
      <% end %>
    </div>

    <div class="col-12 col-lg-5">
      <%= f.input :archivo, input_html: { class: "validado form-control archivo-field", required: true } %>
      <%= f.input :archivo_cache, as: :hidden %>
    </div>

    <div class="col-12 col-lg-2">
      <%= __descargar_archivo(f.object.archivo, f.object.archivo) %>
    </div>

    <% unless local_assigns[:cv] || local_assigns[:ci] %>
      <div class="col-12 col-lg-1">
        <%= link_to_remove_association raw('<i class="fa fa-minus"></i>'), f, class: 'btn btn-danger btn-sm mt-4' %>
      </div>
    <% end %>
  </div>
</div>

