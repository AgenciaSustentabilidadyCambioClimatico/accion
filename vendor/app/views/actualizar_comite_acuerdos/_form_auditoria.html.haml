%tr.auditoria
  %td
    = hidden_field_tag "informe_acuerdo[auditorias][][id]", "no"
    = link_to '#', class: 'remove-auditoria' do
      %i.fa.fa-times-circle.link-to-remove-row
  %td
    = text_field_tag "", nil, class: 'form-control auditoria-orden', required: false, disabled: true      
  %td
    = text_field_tag "informe_acuerdo[auditorias][][nombre]", nil, class: "form-control auditoria-nombre"
  %td.desactivado-pa{style: "max-width:70px"}
    = number_field_tag "informe_acuerdo[auditorias][][plazo]", nil, min: 0, class: "form-control auditoria-plazo"
  %td
    = check_box_tag "informe_acuerdo[auditorias][][con_certificacion]", false, false, class: "form-control auditoria-certificacion"
  %td
    = check_box_tag "informe_acuerdo[auditorias][][con_validacion]", false, false, class: "form-control auditoria-validacion"
  %td
    = radio_button_tag "informe_acuerdo[auditorias][][final]", false, false, class: "form-control auditoria-final"