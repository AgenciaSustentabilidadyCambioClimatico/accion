- titulo t(:fecha_efectiva_pago)
= simple_form_for @proyecto, url: actualizar_fecha_efectiva_pago_seguimiento_fpl_proyecto_path(@proyecto), remote: true do |f|
  .row
    .col-12
      .card
        .card-header
          %h5.no-margin=t(:ingreso_fecha_efectiva_de_pago)
        .card-body
          .row
            .col-12
              .row
                .col-12
                  %h5=@proyecto.nombre
                .col-6
                  = f.input :monto_pagar, label: t(:monto_a_pagar), as: :string, disabled: true, input_html: {value: @monto_pagar, class: 'moneda'}
                .col-6
                  = f.input :fecha_pago_efectiva, label: t(:fecha_pago_efectiva), as: :string, input_html: { class: 'required-field basic-datetimepicker', value: nil}, required: true
  .float-right
    = volver_root
    = button_tag t(:save), 'data-disable-with' => "<i class='fa fa-spinner fa-spin'></i> Guardando...".html_safe, id: 'consultar-button', class: "btn btn-sm btn-primary"# btn-disabled", disabled: :disabled