= titulo t(:instrumento)
= simple_form_for @instrumento, remote: true do |f|
  .row
    .col-lg-12.column
      .card
        .card-header
          %h5.no-margin
            = action_label_of_(@instrumento)
        .card-body
          .row
            .col-4
              = f.input :nombre, require: true, input_html: { class: 'required-field' }
            .col-4
              = f.input :tipo_instrumento_id, collection: TipoInstrumento.all.map{|m|[m.nombre,m.id]}, require: true
            .col-4
              = f.input :nivel, label: t(:nivel), require: true
            .col-12
              = f.input :glosario, label: t(:glosario), require: true
            .col-12
              = f.input :certificaciones_homologables, label: t(:certificaciones_homologables), require: true
            .col-12
              = f.input :poligono_ubicacion, label: t(:polígono_ubicación), require: true
  .float-right
    = link_to t(:back), instrumentos_path, class: 'btn btn-sm btn-warning'
    = button_tag t(:save), 'data-disable-with' => "<i class='fa fa-spinner fa-spin'></i> Guardando...".html_safe, id: 'consultar-button', class: "btn btn-sm btn-primary btn-disabled", disabled: :disabled