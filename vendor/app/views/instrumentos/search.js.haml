- unless @errors == true
	$('#modal-agregar-instrumento-remote-table').html("#{ j render 'instrumentos/filter_table_modal'}");
	$.each($("#hito-de-prensa-instrumentos > tbody > tr.fields:not([style*='display']) > td input.form-control[type='hidden']"),function(k,v){ $("#"+$(v).val()+"-asociar-instrumento").remove(); });

$(document).on('nested:fieldRemoved:comentario_archivos', function() { toggleAddLink(); });
$('#modal-agregar-instrumento-remote-form').html("#{ j render 'instrumentos/filter_form_modal'}");
$('[id*="-asociar-instrumento"]').click(function(){ id=$(this).attr("id").split("-")[0]; $('#instrumento-added').val(id); $('[data-target="#hito-de-prensa-instrumentos"]').trigger('click'); $(this).remove(); });
$('#agregar-instrumentos').on('hide.bs.modal', function (e) { $('#instrumento_nombre').val(""); $('#modal-agregar-instrumento-remote-table').html("#{ j render 'instrumentos/filter_table_modal',no_data: true}") })

htmlErrorToTooltip('top');
enableDisabledButton();