- close_button = close_button.nil? ? true : close_button
.row
	.col-sm-12
		- flash.each do |name, msg|
			- name = name.to_sym
			- if name==:notice or name==:success
				- icon = 'check-circle'
				- alert = :success
			- elsif name==:error or name==:alert
				- icon = 'times-circle'
				- alert = :danger 
			- elsif name==:warning
				- icon = 'warning'
				- alert = :warning
			- else 
				- icon = 'info-circle'
				- alert = name

			- unless msg.blank?
				- name = name.to_sym
				.alert.alert.fade.show.text-center.messages-content{:role => "alert", class: "alert-#{alert}#{close_button ? ' alert-dismissible' : nil}"}
					- if close_button
						%button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
							%span{"aria-hidden" => "true"} ×
					- if msg.is_a?(Hash)
						%i.fa.fa-2x{class: "fa-#{icon}"}
						- msg.each do |k,v|
							- if v.is_a?(Array) && v.map{|v| v unless v.blank?}.compact.size > 0
								- v.each do |vv|
									%p.no-margin= vv.to_s.html_safe
							- elsif v.blank? == false
								%p"#{k}: #{v.to_s.html_safe}"
					- elsif msg.is_a?(Array)
						%i.fa.fa-2x{class: "fa-#{icon}"}
						- msg.each do |m|
							%p.mb-1=m.to_s.html_safe
					- else
						%div
							%i.fa.fa-2x{class: "fa-#{icon}"}
							%p.no-margin=msg.to_s.html_safe
		-# Una vez que se recorren los mensajes, la memoria del flash se limpia.-
		-flash.clear
