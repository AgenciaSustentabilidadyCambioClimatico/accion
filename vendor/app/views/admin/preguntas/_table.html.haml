:javascript
  $(document).ready(function() {
    $('table.preguntas').DataTable({
      responsive: true,
      lengthMenu: [[30], [30]],
      columnDefs: [ { targets: [-1], orderable: false } ],
      language: {
        url: "#{asset_path('spanish.json')}"
      },
    });
    $('#modificar').change(function(){
      $("input[name='modificables[]']").prop('checked', $(this).is(':checked'));
    });
  });
.card
  .card-header
    %h5.no-margin
      = t(:lista_de_, items: t(:preguntas).downcase)
  .card-body
    .table-responsive
      %table.table.preguntas.table-striped
        %thead
          %tr
            %th=t(:texto)
            %th=t(:tipo_respuestas)
            %th=t(:es_pregunta_base)
            %th.dos.iconos-acciones=t(:acciones)
            /%th=#t(:modificable)

        %tbody
          - @preguntas.each do |record|
            %tr
              %td=record.texto
              %td=t(record.tipo_respuestas)
              %td=record.base ? t(:yes_with_fa_check).html_safe : t(:no_with_fa_times).html_safe

              %td.dos.iconos-acciones
                %div
                  - unless [1,2].include?(record.id)  #DZC se programa la imposibilidad de modificar las preguntas de evaluación
                    = link_to edit_admin_pregunta_path(record) do
                      %i.fa.fa-edit
                    = link_to admin_pregunta_path(record), method: :delete, data: { confirm: t(:está_seguro_que_desea_borrar?, item: t(:pregunta).downcase), remote: false } do
                      %i.fa.fa-trash
              /%td=# check_box_tag "modificables[]", record[:id], true