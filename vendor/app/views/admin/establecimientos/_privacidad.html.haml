.col-lg-4.col-12
	.card
		.card-header
			%h5.no-margin
				= "Privacidad"
		.card-body
			.row
				.col-12
					.alert.alert-info
						%i.fa.fa-info-circle
						Permitir a otros ver los siguientes campos
					- fields_visibility = {} if fields_visibility.blank?
					- @privacidad = PrivacidadPermiso.find_by_entidad(:establecimientos)
					%ul.p-0
						- @privacidad.fields_visibility.each do |attr, value|
							-if @privacidad.attributes["fields_visibility"].present? && @privacidad.fields_visibility[attr] == "Por usuario"
								%li.list-style-none
									- checked = fields_visibility[attr] == "1" ? true : false
									= hidden_field_tag "establecimiento_contribuyente[fields_visibility][#{attr}]" , 0
									= check_box_tag "establecimiento_contribuyente[fields_visibility][#{attr}]", 1, checked, class: 'im-not-required-check-the-others'
									%label.string.control-label
										=t(attr)