- es_para_seleccion = es_para_seleccion.nil? ? false : es_para_seleccion
- resultado_mostrados = resultado_mostrados.nil? ? 30 : resultado_mostrados

:javascript
  $(document).ready(function() {
    $('.chosen-control').chosen({
      allow_single_deselect: true,
      no_results_text: 'No se encontraron resultados',
      width: '100%'
    });
  });

= render 'admin/lugares/resultado_consulta'
= form_tag search_admin_lugares_path, remote: true, html: { method: :put, class: 'filter', autocomplete: :off } do
  .row
    .col-12.col-lg-3
      = text_field_tag :pais, params[:pais], class: 'not-required-if-other-like-me-is-present form-control form-control-sm m-0', placeholder: "Ingresar país a buscar", as: :string, required: false
    .col-12.col-lg-3
      = text_field_tag :region, params[:region], class: 'not-required-if-other-like-me-is-present form-control form-control-sm m-0', placeholder: "Ingresar Región a buscar", as: :string, required: false
    .col-12.col-lg-3
      = text_field_tag :provincia, params[:provincia], class: 'not-required-if-other-like-me-is-present form-control form-control-sm m-0', placeholder: "Ingresar Provincia a buscar", as: :string, required: false
    .col-12.col-lg-2
      = text_field_tag :comuna, params[:comuna], class: 'not-required-if-other-like-me-is-present form-control form-control-sm m-0', placeholder: "Ingresar Comuna a buscar", as: :string, required: false
    .col-lg-1.col-12
      = button_tag "<i class='fa fa-search fa-2x'></i>".html_safe, 'data-disable-with' => "<i class='fa fa-spinner fa-spin fa-2x'></i>".html_safe, id: 'consultar-button', class: "btn btn-sm btn-light btn-block p-0 btn-disabled"